<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/name_item_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Name: "
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"/>

        <TextView
            android:id="@+id/name_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingTop="16dp"/>

        <TextView
            android:id="@+id/rout_name_item_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Name Route: "
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"/>

        <TextView
            android:id="@+id/rout_name_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingTop="16dp"/>

    </LinearLayout>
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapview"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_information_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"/>

        <TextView
            android:id="@+id/difficult_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"/>

        <TextView
            android:id="@+id/rout_type_name_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"/>

    </LinearLayout>

</LinearLayout>